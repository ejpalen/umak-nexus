<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/profile_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|start|center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/syne"
                android:text="Aaron Patrick Planta"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/syne"
                android:text="aplanta.keme@umak.edu.ph"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/edit_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_m"
                android:fontFamily="@font/syne_bold"
                android:text="EDIT PROFILE"
                android:textColor="@color/main_color"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/orderhistory"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="@drawable/bg_btn_item">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_weight="0.9"
                    android:fontFamily="@font/syne"
                    android:gravity="left|center_vertical"
                    android:paddingStart="10sp"
                    android:text="Order History"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="0.1"
                    android:background="@drawable/proceed_button"
                    android:paddingEnd="10sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/wishlist"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_btn_item">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_weight="0.9"
                    android:fontFamily="@font/syne"
                    android:gravity="left|center_vertical"
                    android:paddingStart="10sp"
                    android:text="Wishlist"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="0.1"
                    android:background="@drawable/proceed_button"
                    android:paddingEnd="10sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/feedbackandsupport"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_btn_item">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_weight="0.9"
                    android:fontFamily="@font/syne"
                    android:gravity="left|center_vertical"
                    android:paddingStart="10sp"
                    android:text="Feedback and Support"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="0.1"
                    android:background="@drawable/proceed_button"
                    android:paddingEnd="10sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/settings"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_btn_item">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_weight="0.9"
                    android:fontFamily="@font/syne"
                    android:gravity="left|center_vertical"
                    android:paddingStart="10sp"
                    android:text="Settings"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="0.1"
                    android:background="@drawable/proceed_button"
                    android:paddingEnd="10sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_btn_item">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_weight="0.9"
                    android:fontFamily="@font/syne"
                    android:gravity="left|center_vertical"
                    android:paddingStart="10sp"
                    android:text="Logout"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="0.1"
                    android:background="@drawable/proceed_button"
                    android:paddingEnd="10sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#f2f2f2"
        android:elevation="2dp"
        android:padding="5dp"
        app:itemIconSize="25dp"
        app:itemIconTint="@drawable/item_selector"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>