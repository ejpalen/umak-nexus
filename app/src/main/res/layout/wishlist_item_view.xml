<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingTop="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/category_bg"
            app:cardCornerRadius="20dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/border_color"
            app:cardElevation="0dp">

        <ImageView
            android:id="@+id/wishlistProductImg"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/unif_sample"
            />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/wishlistProduct"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="UNIFORM (FEMALE)"
            android:textSize="15dp"
            android:layout_below="@+id/wishlistProductImg"
            android:textColor="@color/black"
            android:fontFamily="@font/syne_semibold"
            />

        <TextView
            android:id="@+id/wishlistPrice"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="â‚±300.00"
            android:textSize="15dp"
            android:layout_below="@+id/wishlistProduct"
            android:textColor="@color/black"
            android:fontFamily="@font/syne_semibold"
            />
    </LinearLayout>
</LinearLayout>